<?xml version="1.0" encoding="UTF-8"?>
<context name="INSULIN_BITZUA_CONTEXT">
    <categories>DrugAdministration</categories>
    <description>Insulin (basal/ bolus/ IV) influence context</description>
    <derived-from>
        <attribute name="BOLUS_BITZUA" tak="raw-concept" idx="0" ref="A1"/>
        <attribute name="BASAL_BITZUA" tak="raw-concept" idx="0" ref="A2"/>
        <attribute name="INSULIN_BITZUA" tak="raw-concept" idx="0" ref="A3"/>
    </derived-from>

    <abstraction-rules>
        <rule value="IV" operator="or">
            <attribute ref="A3">
                <allowed-value min="1"/>
            </attribute>
        </rule>
        <rule value="Short" operator="or">
            <attribute ref="A1">
                <allowed-value min="1"/>
            </attribute>
        </rule>
        <rule value="Long" operator="or">
            <attribute ref="A2">
                <allowed-value min="1"/>
            </attribute>
        </rule>
    </abstraction-rules>

    <context-windows>
        <persistence value="Short" good-before="0h" good-after="4h"/>
        <persistence value="Long" good-before="0h" good-after="18h"/>
        <persistence value="IV" good-before="0h" good-after="1h"/>
    </context-windows>
</context>