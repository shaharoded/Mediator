<?xml version="1.0" encoding="UTF-8"?>
<context name="DIABETES_DIAGNOSIS_CONTEXT">
    <categories>Diagnosis</categories>
    <description>DIABETES context</description>
    <derived-from>
        <attribute name="DIABETES_DIAGNOSIS" tak="raw-concept" idx="0" ref="A1"/>
    </derived-from>

    <abstraction-rules>
        <rule value="True" operator="or">
            <attribute ref="A1">
                <allowed-value equal="True"/>
            </attribute>
        </rule>
    </abstraction-rules>
    
    <context-windows>
        <!-- A DD diagnosis is relevant from the beginning of the hospitalization -->
        <persistence value="True" good-before="14d" good-after="120y"/>
    </context-windows>

</context>