<?xml version="1.0" encoding="UTF-8"?>
<context name="DIABETES_DIAGNOSIS_CONTEXT">
    <categories>Diagnosis</categories>
    <description>DIABETES context</description>
    <derived-from>
        <attribute name="DIABETES_DIAGNOSIS" tak="raw-concept" idx="0"/>
    </derived-from>

    <!-- An instance of these will clip the context windows -->
    <clippers>
        <clipper name="DEATH" tak="raw-concept" clip-before="0s" clip-after="120y"/>
        <clipper name="RELEASE" tak="raw-concept" clip-before="0s" clip-after="120y"/>
    </clippers>
    
    <context-windows>
        <!-- A DD diagnosis is relevant from the beginning of the hospitalization -->
        <persistence good-before="14d" good-after="120y"/>
    </context-windows>

</context>