<?xml version="1.0" encoding="UTF-8"?>
<context name="REACTIVE_INSULIN_BITZUA_CONTEXT">
    <categories>DrugAdministration</categories>
    <description>Insulin (bolus/ IV) influence context, to cover for high glucose levels</description>
    <derived-from>
        <attribute name="BOLUS_BITZUA" tak="raw-concept" idx="0" ref="A1"/>
        <attribute name="INSULIN_BITZUA" tak="raw-concept" idx="0" ref="A2"/>
    </derived-from>

    <abstraction-rules>
        <rule value="IV" operator="or">
            <attribute ref="A2">
                <allowed-value min="0.01"/>
            </attribute>
        </rule>
        <rule value="Short" operator="or">
            <attribute ref="A1">
                <allowed-value min="1"/>
            </attribute>
        </rule>
    </abstraction-rules>

    <context-windows>
        <persistence value="Short" good-before="0h" good-after="4h"/>
        <persistence value="IV" good-before="12h" good-after="12h"/>
    </context-windows>
</context>