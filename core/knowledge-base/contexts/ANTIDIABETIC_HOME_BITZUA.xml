<?xml version="1.0" encoding="UTF-8"?>
<context name="ANTIDIABETIC_HOME_BITZUA_CONTEXT">
    <categories>DrugAdministration</categories>
    <description>Context to identify if antidiabetic medication administration at home is chronic, which will affect compliance patterns</description>
    <derived-from>
        <attribute name="ANTIDIABETIC_HOME_BITZUA" tak="raw-concept" idx="0" ref="A1"/>
    </derived-from>

    <abstraction-rules>
        <rule value="True" operator="or">
            <attribute ref="A1">
                <allowed-value equal="True"/>
            </attribute>
        </rule>
    </abstraction-rules>
    
    <context-windows>
        <!-- The idea is to "know at admission" if this medication is chronic -->
        <persistence value="True" good-before="14d" good-after="0h"/>
    </context-windows>

</context>