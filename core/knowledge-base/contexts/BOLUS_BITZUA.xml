<?xml version="1.0" encoding="UTF-8"?>
<context name="BOLUS_BITZUA_CONTEXT">
    <categories>Medicine</categories>
    <description>BOLUS influence context</description>
    <derived-from>
        <attribute name="BOLUS_BITZUA" tak="raw-concept" idx="0"/>
    </derived-from>

    <abstraction-rules>
        <rule value="Very Low" operator="or">
            <attribute name="BOLUS_BITZUA" idx="0">
                <allowed-value min="0" max="4"/>
            </attribute>
        </rule>
        <rule value="Low" operator="or">
            <attribute name="BOLUS_BITZUA" idx="0">
                <allowed-value min="4" max="10"/>
            </attribute>
        </rule>
        <rule value="Medium" operator="or">
            <attribute name="BOLUS_BITZUA" idx="0">
                <allowed-value min="10" max="20"/>
            </attribute>
        </rule>
        <rule value="High" operator="or">
            <attribute name="BOLUS_BITZUA" idx="0">
                <allowed-value min="20" max="30"/>
            </attribute>
        </rule>
        <rule value="Very High" operator="or">
            <attribute name="BOLUS_BITZUA" idx="0">
                <allowed-value min="30"/>
            </attribute>
        </rule>
    <!-- idx="1" (route) is nominal and not required as attribute; no discretization needed -->
    </abstraction-rules>

    <context-windows>
        <persistence value="Very Low" good-before="0h" good-after="4h"/>
        <persistence value="Low" good-before="0h" good-after="4h"/>
        <persistence value="Medium" good-before="0h" good-after="8h"/>
        <persistence value="High" good-before="0h" good-after="8h"/>
        <persistence value="Very High" good-before="0h" good-after="8h"/>
    </context-windows>

    <!-- An instance of these will clip the context windows -->
    <clippers>
        <clipper name="DEATH" tak="raw-concept"/>
        <clipper name="RELEASE" tak="raw-concept"/>
    </clippers>
</context>