<?xml version="1.0" encoding="UTF-8"?>
<context name="BASAL_BITZUA_CONTEXT">
    <categories>Medicine</categories>
    <description>BASAL influence context</description>
    <derived-from>
        <attribute name="BASAL_BITZUA" tak="raw-concept" idx="0"/>
    </derived-from>

    <abstraction-rules>
        <rule value="Very Low" operator="or">
            <attribute name="BASAL_BITZUA" idx="0">
                <allowed-value min="0" max="10"/>
            </attribute>
        </rule>
        <rule value="Low" operator="or">
            <attribute name="BASAL_BITZUA" idx="0">
                <allowed-value min="10" max="20"/>
            </attribute>
        </rule>
        <rule value="Medium" operator="or">
            <attribute name="BASAL_BITZUA" idx="0">
                <allowed-value min="20" max="40"/>
            </attribute>
        </rule>
        <rule value="High" operator="or">
            <attribute name="BASAL_BITZUA" idx="0">
                <allowed-value min="40" max="60"/>
            </attribute>
        </rule>
        <rule value="Very High" operator="or">
            <attribute name="BASAL_BITZUA" idx="0">
                <allowed-value min="60"/>
            </attribute>
        </rule>
    <!-- idx="1" (route) is nominal and not required as attribute; no discretization needed -->
    </abstraction-rules>

    <context-windows>
        <persistence value="Very Low" good-before="0h" good-after="12h"/>
        <persistence value="Low" good-before="0h" good-after="12h"/>
        <persistence value="Medium" good-before="0h" good-after="24h"/>
        <persistence value="High" good-before="0h" good-after="24h"/>
        <persistence value="Very High" good-before="0h" good-after="24h"/>
    </context-windows>

    <!-- An instance of these will clip the context windows -->
    <clippers>
        <clipper name="DEATH" tak="raw-concept" clip-before="0s" clip-after="120y"/>
        <clipper name="RELEASE" tak="raw-concept" clip-before="0s" clip-after="120y"/>
    </clippers>
</context>