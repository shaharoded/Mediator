<?xml version="1.0" encoding="UTF-8"?>
<trend name="HEART_RATE_MEASURE_TREND">
    <categories>Measurements</categories>
    <description>Trend for the measurements of HEART_RATE</description>
    <derived-from name="HEART_RATE_MEASURE" tak="raw-concept" idx="0" significant-variation="12.5"/>

    <!-- Each point will be classified as either "steady" or "changing" based on this window -->
    <time-steady value="4h"/>

    <!-- maximum difference between consecutive points to merge if both has the same classification -->
    <persistence good-after="6h"/>

</trend>