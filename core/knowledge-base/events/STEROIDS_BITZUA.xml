<?xml version="1.0" encoding="UTF-8"?>
<event name="STEROIDS_BITZUA_EVENT">
    <categories>DrugAdministration</categories>
    <description>Marks steroids administration event (IV/PO/SC)</description>
    <derived-from>
        <!-- ref optional when no abstraction-rules -->
        <attribute name="STEROIDS_IV_BITZUA" tak="raw-concept" idx="0" ref='A1'/>
        <attribute name="STEROIDS_PO_BITZUA" tak="raw-concept" idx="0" ref='A2'/>
    </derived-from>

    <abstraction-rules>
        <rule value="IV" operator="or">
            <attribute ref="A1">
                <allowed-value equal="True"/>
            </attribute>
        </rule>
        <rule value="PO" operator="or">
            <attribute ref="A2">
                <allowed-value equal="True"/>
            </attribute>
        </rule>
    </abstraction-rules>
</event>