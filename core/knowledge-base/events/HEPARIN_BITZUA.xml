<?xml version="1.0" encoding="UTF-8"?>
<event name="HEPARIN_BITZUA_EVENT">
    <categories>DrugAdministration</categories>
    <description>Marks Heparin administration event (IV - more severe)</description>
    <derived-from>
        <!-- ref optional when no abstraction-rules -->
        <attribute name="HEPARIN_IV_BITZUA" tak="raw-concept" idx="0" ref='A1'/>
        <attribute name="HEPARIN_SC_BITZUA" tak="raw-concept" idx="0" ref='A2'/>
    </derived-from>

    <abstraction-rules>
        <rule value="IV" operator="or">
            <attribute ref="A1">
                <allowed-value equal="True"/>
            </attribute>
        </rule>
        <rule value="SC" operator="or">
            <attribute ref="A2">
                <allowed-value equal="True"/>
            </attribute>
        </rule>
    </abstraction-rules>
</event>