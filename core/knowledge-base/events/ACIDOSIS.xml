<?xml version="1.0" encoding="UTF-8"?>
<event name="ACIDOSIS_EVENT">
    <categories>Complications</categories>
    <description>Marks Acidosis (in admission complication) event</description>
    <derived-from>
        <!-- ref optional when no abstraction-rules -->
        <attribute name="BICARBONATE_MEASURE" tak="raw-concept" idx="0" ref='A1'/>
        <attribute name="PH_MEASURE" tak="raw-concept" idx="0" ref='A2'/>
    </derived-from>

    <abstraction-rules>
        <rule value="True" operator="or">
            <attribute ref="A1">
                <allowed-value max="10"/>
            </attribute>
            <attribute ref="A2">
                <allowed-value max="7.2"/>
            </attribute>
        </rule>
    </abstraction-rules>
</event>