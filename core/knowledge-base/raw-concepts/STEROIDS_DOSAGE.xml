<?xml version="1.0" encoding="UTF-8"?>
<raw-concept name="STEROIDS_DOSAGE" concept-type="raw">
    <categories>DrugAdministration</categories>
    <description>Raw concept to manage the administration dosage of steroids (already discretized)</description>
    <attributes>
        <attribute name="STEROIDS_DOSAGE" type="nominal">
            <nominal-allowed-values>
                <allowed-value value="Low"/>
                <allowed-value value="Medium"/>
                <allowed-value value="High"/>
            </nominal-allowed-values>
        </attribute>
        <attribute name="STEROIDS_ROUTE" type="nominal">
            <nominal-allowed-values>
                <allowed-value value="IV"/>
                <allowed-value value="PO"/>
            </nominal-allowed-values>
        </attribute>
    </attributes>
    
    <!-- Tuple-order BEFORE merge -->
    <tuple-order>
        <attribute name="STEROIDS_DOSAGE"/>
        <attribute name="STEROIDS_ROUTE"/>
    </tuple-order>

    <!-- Merge dosage+route if observed together; each is optional -->
    <merge require-all="false"/>
</raw-concept>