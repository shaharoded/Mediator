<?xml version="1.0" encoding="UTF-8"?>
<state name="CREATININE_SERUM_MEASURE_STATE">
    <categories>Measurements</categories>
    <description>Abstraction for the measurements of CREATININE (Serum)</description>
    <derived-from name="CREATININE_SERUM_MEASURE" tak="raw-concept"/>

    <!-- Concatenate adjacent equal states within these windows; allow 1 outlier skip -->
    <persistence good-after="24h" interpolate="true" max-skip="1"/>

    <!-- Discretize and abstract -->
    <abstraction-rules>
        <rule value="Normal" operator="and">
            <attribute idx="0">
                <allowed-value max="1.3"/>
            </attribute>
        </rule>
        <rule value="Mildly Elevated" operator="and">
            <attribute idx="0">
                <allowed-value min="1.3" max="2.5"/>
            </attribute>
        </rule>
        <rule value="High" operator="and">
            <attribute idx="0">
                <allowed-value min="2.5" max="10"/>
            </attribute>
        </rule>
        <rule value="Very High" operator="and">
            <attribute idx="0">
                <allowed-value min="10"/>
            </attribute>
        </rule>
    </abstraction-rules>
</state>