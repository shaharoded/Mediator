<?xml version="1.0" encoding="UTF-8"?>
<state name="SODIUM_MEASURE_STATE">
    <categories>Measurements</categories>
    <description>Abstraction for the measurements of SODIUM (Na‚Å∫) by serum/ blood/ plasma in units of mmol/L</description>
    <derived-from name="SODIUM_MEASURE" tak="raw-concept"/>

    <!-- Concatenate adjacent equal states within these windows; allow 1 outlier skip -->
    <persistence good-after="48h" interpolate="true" max-skip="1"/>

    <!-- Discretize and abstract -->
    <abstraction-rules>
        <rule value="Severe Hyponatremia" operator="and">
            <attribute idx="0">
                <allowed-value max="120"/>
            </attribute>
        </rule>
        <rule value="Moderate Hyponatremia" operator="and">
            <attribute idx="0">
                <allowed-value min="120" max="130"/>
            </attribute>
        </rule>
        <rule value="Mild Hyponatremia" operator="and">
            <attribute idx="0">
                <allowed-value min="130" max="135"/>
            </attribute>
        </rule>
        <rule value="Normal" operator="and">
            <attribute idx="0">
                <allowed-value min="135" max="145"/>
            </attribute>
        </rule>
        <rule value="Mild Hypernatremia" operator="and">
            <attribute idx="0">
                <allowed-value min="145" max="155"/>
            </attribute>
        </rule>
        <rule value="Moderate Hypernatremia" operator="and">
            <attribute idx="0">
                <allowed-value min="155" max="165"/>
            </attribute>
        </rule>
        <rule value="Severe Hypernatremia" operator="and">
            <attribute idx="0">
                <allowed-value min="165"/>
            </attribute>
        </rule>
    </abstraction-rules>
</state>