<?xml version="1.0" encoding="UTF-8"?>
<state name="NEUTROPHILS_MEASURE_STATE">
    <categories>Measurements</categories>
    <description>Abstraction for the measurements of NEUTROPHILS</description>
    <derived-from name="NEUTROPHILS_MEASURE" tak="raw-concept"/>

    <!-- Concatenate adjacent equal states within these windows; allow 1 outlier skip -->
    <persistence good-after="48h" interpolate="true" max-skip="1"/>

    <!-- Discretize and abstract -->
    <abstraction-rules>
        <rule value="Severe Neutropenia" operator="and">
            <attribute idx="0">
                <allowed-value min="0" max="0.5"/>
            </attribute>
        </rule>
        <rule value="Mild Neutropenia" operator="and">
            <attribute idx="0">
                <allowed-value min="0.5" max="1.5"/>
            </attribute>
        </rule>
        <rule value="Normal" operator="and">
            <attribute idx="0">
                <allowed-value min="1.5" max="7.5"/>
            </attribute>
        </rule>
        <rule value="Moderate" operator="and">
            <attribute idx="0">
                <allowed-value min="7.5" max="10"/>
            </attribute>
        </rule>
        <rule value="Severe" operator="and">
            <attribute idx="0">
                <allowed-value min="10" max="20"/>
            </attribute>
        </rule>
        <rule value="Extreme" operator="and">
            <attribute idx="0">
                <allowed-value min="20"/>
            </attribute>
        </rule>
    </abstraction-rules>
</state>