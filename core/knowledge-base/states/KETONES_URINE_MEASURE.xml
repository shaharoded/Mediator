<?xml version="1.0" encoding="UTF-8"?>
<state name="KETONES_URINE_MEASURE_STATE">
    <categories>Measurements</categories>
    <description>Abstraction for the measurements of KETONES (by Urine)</description>
    <derived-from name="KETONES_URINE_MEASURE" tak="raw-concept"/>

    <!-- Concatenate adjacent equal states within these windows; allow 1 outlier skip -->
    <persistence good-after="12h" interpolate="true" max-skip="1"/>

    <!-- Discretize and abstract -->
    <abstraction-rules>
        <rule value="Normal" operator="and">
            <attribute idx="0">
                <allowed-value min="0" max="15"/>
            </attribute>
        </rule>
        <rule value="Mild Ketosis" operator="and">
            <attribute idx="0">
                <allowed-value min="15" max="40"/>
            </attribute>
        </rule>
        <rule value="Ketosis" operator="and">
            <attribute idx="0">
                <allowed-value min="40" max="100"/>
            </attribute>
        </rule>
        <rule value="Severe Ketosis" operator="and">
            <attribute idx="0">
                <allowed-value min="100"/>
            </attribute>
        </rule>
    </abstraction-rules>
</state>