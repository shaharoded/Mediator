<?xml version="1.0" encoding="UTF-8"?>
<state name="PLT_MEASURE_STATE">
    <categories>Measurements</categories>
    <description>Abstraction for the measurements of PLT</description>
    <derived-from name="PLT_MEASURE" tak="raw-concept"/>

    <!-- Concatenate adjacent equal states within these windows; allow 1 outlier skip -->
    <persistence good-after="36h" interpolate="true" max-skip="1"/>

    <!-- Discretize and abstract -->
    <abstraction-rules>
        <rule value="Thrombocytopenia" operator="and">
            <attribute idx="0">
                <allowed-value min="0" max="100"/>
            </attribute>
        </rule>
        <rule value="Normal" operator="and">
            <attribute idx="0">
                <allowed-value min="100" max="450"/>
            </attribute>
        </rule>
        <rule value="Thrombocytosis" operator="and">
            <attribute idx="0">
                <allowed-value min="450"/>
            </attribute>
        </rule>
    </abstraction-rules>
</state>