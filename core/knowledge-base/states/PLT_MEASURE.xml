<?xml version="1.0" encoding="UTF-8"?>
<state name="PLT_MEASURE_STATE">
    <categories>Measurements</categories>
    <description>Abstraction for the measurements of PLT (in units of 10e3/uL)</description>
    <derived-from name="PLT_MEASURE" tak="raw-concept"/>

    <!-- Concatenate adjacent equal states within these windows; allow 1 outlier skip -->
    <persistence good-after="96h" interpolate="true" max-skip="1"/>

    <!-- Discretize and abstract -->
    <abstraction-rules>
        <rule value="Severe Thrombocytopenia" operator="and">
            <attribute idx="0">
                <allowed-value min="0" max="50"/>
            </attribute>
        </rule>
        <rule value="Moderate Thrombocytopenia" operator="and">
            <attribute idx="0">
                <allowed-value min="50" max="100"/>
            </attribute>
        </rule>
        <rule value="Mild Thrombocytopenia" operator="and">
            <attribute idx="0">
                <allowed-value min="100" max="150"/>
            </attribute>
        </rule>
        <rule value="Normal" operator="and">
            <attribute idx="0">
                <allowed-value min="150" max="400"/>
            </attribute>
        </rule>
        <rule value="Thrombocytosis" operator="and">
            <attribute idx="0">
                <allowed-value min="400" max="600"/>
            </attribute>
        </rule>
        <rule value="Severe Thrombocytosis" operator="and">
            <attribute idx="0">
                <allowed-value min="600"/>
            </attribute>
        </rule>
    </abstraction-rules>
</state>