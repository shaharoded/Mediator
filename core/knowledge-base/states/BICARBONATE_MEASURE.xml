<?xml version="1.0" encoding="UTF-8"?>
<state name="BICARBONATE_MEASURE_STATE">
    <categories>Measurements</categories>
    <description>Abstraction for the measurements of BICARBONATE</description>
    <derived-from name="BICARBONATE_MEASURE" tak="raw-concept"/>

    <!-- Concatenate adjacent equal states within these windows; allow 1 outlier skip -->
    <persistence good-after="8h" interpolate="true" max-skip="1"/>

    <!-- Discretize and abstract -->
    <abstraction-rules>
        <rule value="Low" operator="and">
            <attribute idx="0">
                <allowed-value min="0" max="22"/>
            </attribute>
        </rule>
        <rule value="Normal" operator="and">
            <attribute idx="0">
                <allowed-value min="22" max="26"/>
            </attribute>
        </rule>
        <rule value="High" operator="and">
            <attribute idx="0">
                <allowed-value min="26"/>
            </attribute>
        </rule>
    </abstraction-rules>
</state>