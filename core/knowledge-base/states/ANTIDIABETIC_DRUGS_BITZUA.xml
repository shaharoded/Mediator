<?xml version="1.0" encoding="UTF-8"?>
<state name="ANTIDIABETIC_DRUGS_BITZUA_STATE">
    <categories>DrugAdministration</categories>
    <description>manage the administration dosage of Anti-Diabetic medications (already discretized)</description>
    <derived-from name="ANTIDIABETIC_DRUGS_BITZUA" tak="raw-concept"/>

    <!-- Concatenate adjacent equal states within these windows; allow 1 outlier skip -->
    <persistence good-after="12h" interpolate="true" max-skip="1"/>

    <abstraction-rules>
        <rule value="PO Low" operator="and">
            <attribute idx="0">
                <allowed-value equal="Low"/>
            </attribute>
            <attribute idx="1">
                <allowed-value equal="PO"/>
            </attribute>
        </rule>
        <rule value="IV Low" operator="and">
            <attribute idx="0">
                <allowed-value equal="Low"/>
            </attribute>
            <attribute idx="1">
                <allowed-value equal="IV"/>
            </attribute>
        </rule>
        <rule value="PO Medium" operator="and">
            <attribute idx="0">
                <allowed-value equal="Medium"/>
            </attribute>
            <attribute idx="1">
                <allowed-value equal="PO"/>
            </attribute>
        </rule>
        <rule value="IV Medium" operator="and">
            <attribute idx="0">
                <allowed-value equal="Medium"/>
            </attribute>
            <attribute idx="1">
                <allowed-value equal="IV"/>
            </attribute>
        </rule>
        <rule value="PO High" operator="and">
            <attribute idx="0">
                <allowed-value equal="High"/>
            </attribute>
            <attribute idx="1">
                <allowed-value equal="PO"/>
            </attribute>
        </rule>
        <rule value="IV High" operator="and">
            <attribute idx="0">
                <allowed-value equal="High"/>
            </attribute>
            <attribute idx="1">
                <allowed-value equal="IV"/>
            </attribute>
        </rule>
    </abstraction-rules>
</state>