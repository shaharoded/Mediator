<?xml version="1.0" encoding="UTF-8"?>
<state name="UREA_MEASURE_STATE">
    <categories>Measurements</categories>
    <description>Abstraction for the measurements of UREA</description>
    <derived-from name="UREA_MEASURE" tak="raw-concept"/>

    <!-- Concatenate adjacent equal states within these windows; allow 1 outlier skip -->
    <persistence good-after="24h" interpolate="true" max-skip="1"/>

    <!-- Discretize and abstract -->
    <abstraction-rules>
        <rule value="Low" operator="and">
            <attribute idx="0">
                <allowed-value min="0" max="10"/>
            </attribute>
        </rule>
        <rule value="Normal" operator="and">
            <attribute idx="0">
                <allowed-value min="10" max="45"/>
            </attribute>
        </rule>
        <rule value="High" operator="and">
            <attribute idx="0">
                <allowed-value min="45" max="80"/>
            </attribute>
        </rule>
        <rule value="Very High" operator="and">
            <attribute idx="0">
                <allowed-value min="80"/>
            </attribute>
        </rule>
    </abstraction-rules>
</state>