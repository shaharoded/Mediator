<?xml version="1.0" encoding="UTF-8"?>
<state name="UREA_MEASURE_STATE">
    <categories>Measurements</categories>
    <description>Abstraction for the measurements of UREA</description>
    <derived-from name="UREA_MEASURE" tak="raw-concept"/>

    <!-- Concatenate adjacent equal states within these windows; allow 1 outlier skip -->
    <persistence good-after="24h" interpolate="true" max-skip="1"/>

    <!-- Discretize and abstract -->
    <abstraction-rules>
        <rule value="Low" operator="and">
            <attribute idx="0">
                <allowed-value max="7"/>
            </attribute>
        </rule>
        <rule value="Normal" operator="and">
            <attribute idx="0">
                <allowed-value min="7" max="20"/>
            </attribute>
        </rule>
        <rule value="Mildly Elevated" operator="and">
            <attribute idx="0">
                <allowed-value min="20" max="40"/>
            </attribute>
        </rule>
        <rule value="Moderately Elevated" operator="and">
            <attribute idx="0">
                <allowed-value min="40" max="80"/>
            </attribute>
        </rule>
        <rule value="Severely Elevated" operator="and">
            <attribute idx="0">
                <allowed-value min="80"/>
            </attribute>
        </rule>
    </abstraction-rules>
</state>